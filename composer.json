{
    "name": "bls/msk-iam-auth",
    "description": "Simple AWS IAM authentication for Apache Kafka MSK clusters",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Bls\\MskIamAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MskIamAuth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test-coverage": "phpunit --coverage-html coverage/",
        "phpstan": "phpstan analyse",
        "check": ["@phpstan", "@test"]
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}